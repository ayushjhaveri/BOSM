<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/rl_stall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:alpha=".95"
        app:cardElevation="6dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/back_shade4"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/icon_stall"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="15dp"
            android:src="@drawable/icon_stall"
            android:tint="#ffffff" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_name"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_stall"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/rl_stall"
        android:alpha=".80"
        app:cardElevation="6dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/rl_stall"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="3dp"
        android:transitionName="@string/simple_fragment_transition">
        <RelativeLayout
            android:id="@+id/rl"
            android:background="@drawable/bg_gradient2"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <ImageView
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/icon"
            android:src="@drawable/football"
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Football"
            android:textColor="@color/background2"
            android:textSize="22sp" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="12dp"
                android:layout_centerInParent="true"
                android:src="@android:color/darker_gray"
                android:id="@+id/notify"
                app:btn_color="@color/back_shade2"
                app:btn_fill_color="@color/background2"
                app:allow_random_color="false"
                app:enable_flashing="true"
                app:big_shine_color="@color/orange_shade"
                app:click_animation_duration="200"
                app:shine_animation_duration="1500"
                app:shine_turn_angle="10"
                app:small_shine_offset_angle="20"
                app:small_shine_color="#CC9999"
                app:shine_count="8"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>