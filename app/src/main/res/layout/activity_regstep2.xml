<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_sports"

    tools:openDrawer="end">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg1"
        android:tint="#3f395e" />
    <android.support.v7.widget.CardView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/back_shade4"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARTICIPANTS"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/shade3"
            android:padding="12dp"
            />
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/listview_participants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_above="@id/layout_buttons"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="12dp"
        >
    </ListView>
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/button_add_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_personadd"
            android:drawablePadding="5dp"
            android:drawableTint="@color/shade3"
            android:text="New"
            android:textSize="15dp"
            android:textColor="@color/shade3"
            android:background="@color/back_shade1"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/button_add_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports Team"
            android:textSize="15dp"
            android:textColor="@color/shade3"
            android:drawableLeft="@drawable/icon_sportreg"
            android:drawablePadding="5dp"
            android:drawableTint="@color/shade3"
            android:background="@color/back_shade1"
            android:layout_marginLeft="24dp"
            android:padding="5dp"
            />
    </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_sports"
        app:menu="@menu/activity_sports_drawer" />


</android.support.v4.widget.DrawerLayout>