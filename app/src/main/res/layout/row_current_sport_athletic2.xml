<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_sort_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginTop="14dp"
            android:textColor="@color/back_shade2"
            android:text="Day 1"
            android:textStyle="italic"
            android:textSize="22sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_above="@+id/vertical_view1"
            android:layout_marginStart="47dp"
            app:cardBackgroundColor="#E64A19"
            app:cardCornerRadius="6dp" />

        <View
            android:id="@+id/vertical_view1"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="49dp"
            android:background="#66130f2b" />
    </RelativeLayout>

    <View
        android:id="@+id/vertical_view2"
        android:layout_width="8dp"
        android:layout_height="32dp"
        android:layout_below="@id/rl_top"
        android:layout_marginStart="49dp"
        android:background="#66130f2b" />

    <!--BDBDBD-->


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/border_shadow"
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vertical_view2"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        >

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:id="@+id/rl_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:maxLength="30"
                android:id="@+id/tv_subtitle"
                android:paddingTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:paddingBottom="4dp"
                android:text="Running Event -100m"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/view_12"
            android:layout_below="@+id/rl_title2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_gradient"/>


        <RelativeLayout
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_below="@id/view_12"
            android:id="@+id/rl_college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_gold"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/tv_gold_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sanjeet"
                    android:textColor="@color/gold"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="GOLD"
                    android:textColor="@color/gold"
                    android:textSize="10sp" />
                <TextView
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/tv_gold_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="45m"
                    android:textColor="@color/gold"
                    android:textSize="8sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_below="@id/ll_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:id="@+id/tv_silver_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sanjeet"
                        android:textColor="@color/silver"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SILVER"
                        android:textColor="@color/silver"
                        android:textSize="10sp" />
                    <TextView
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:id="@+id/tv_silver_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="45m"
                        android:textColor="@color/silver"
                        android:textSize="8sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:id="@+id/tv_bronze_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sanjeet"
                        android:textColor="@color/bronze"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="BRONZE"
                        android:textColor="@color/bronze"
                        android:textSize="10sp" />
                    <TextView
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:id="@+id/tv_bronze_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="45m"
                        android:textColor="@color/bronze"
                        android:textSize="8sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_college"
            >


            <!--<View-->
            <!--android:background="@color/back_shade2"-->
            <!--android:layout_marginHorizontal="15dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--/>-->

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="19:00"
                    android:textColor="#66627f"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#66627f"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:text=" | "/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="4dp"
                    android:text="GYM G"
                    android:textColor="#66627f"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
