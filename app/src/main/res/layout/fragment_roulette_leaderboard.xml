<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context="bitspilani.bosm.roulette.RouletteLeaderboardFragment">

<RelativeLayout
    android:elevation="10dp"
    android:padding="10dp"
    android:layout_marginTop="@dimen/header_top_margin"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".90"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/background2"
        app:cardCornerRadius="20.5dp">

        <android.support.v7.widget.CardView
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp"
            android:layout_width="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="MY RANK"
                android:textColor="@color/background2"
                android:textSize="22sp" />

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/card_events"
        android:id="@+id/card_events2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".90"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/background2"
        app:cardCornerRadius="20.5dp">

        <android.support.v7.widget.CardView
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp"
            android:layout_width="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:id="@+id/tvRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="-"
                android:textColor="@color/background2"
                android:textSize="22sp" />

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>



</RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:paddingTop="130dp"
                    android:paddingBottom="120dp"
                    android:clipToPadding="false"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#BDBDBD"
                    android:dividerHeight="0.2dp"
                    android:scrollbars="none" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
