<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="48dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border_shadow"
        android:elevation="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/linear_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Football"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>


            <TextView
                android:id="@+id/text_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="Final"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_round"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:text="20/9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="16:00"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="Gym G"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_time"
            android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_toLeftOf="@id/separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_college_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BITS Pilani"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/text_score_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="5"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <View
                    android:id="@+id/separator"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="#90909090"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:layout_toRightOf="@id/separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/text_college_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IIT Delhi"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/text_score_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>