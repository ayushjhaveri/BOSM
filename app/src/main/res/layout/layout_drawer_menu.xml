<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/menu_gradient"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bosm"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_bosm"/>

    <TextView
        android:id="@+id/tv_bosm"
        android:layout_marginTop="12dp"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:text="BOSM 2K18"
        android:layout_below="@+id/iv_bosm"
        />


    <TextView
        android:background="@drawable/border_shadow_menu"
        android:layout_marginRight="24dp"
        android:id="@+id/tv_home"
        android:text="Home"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:layout_below="@+id/tv_bosm"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:tint="#ffffff"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_roight_arrow"
        android:layout_alignTop="@+id/tv_home"
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:layout_alignBottom="@+id/tv_home"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/border_shadow_menu"
        android:layout_marginRight="24dp"
        android:id="@+id/tv_order_food"
        android:text="Order Food"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:layout_below="@+id/tv_home"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:tint="#ffffff"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_roight_arrow"
        android:layout_alignTop="@+id/tv_order_food"
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:layout_alignBottom="@+id/tv_order_food"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/baxter"/>

</RelativeLayout>