<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:id="@+id/rl_filled"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:id="@+id/lv_recent"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_3"
        android:paddingBottom="140dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        />


    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/rl_stall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:alpha=".95"
        app:cardElevation="6dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/back_shade4"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/icon_stall"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="10dp"
            android:src="@drawable/icon_stall"
            android:tint="#ffffff" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_stall"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/rl_stall"
        android:alpha=".95"
        app:cardElevation="6dp"
        android:layout_marginEnd="64dp"
        android:layout_toEndOf="@+id/rl_stall"
        app:cardBackgroundColor="@color/back_shade4"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:text="LIVE"
            android:textColor="@color/background2"
            android:textSize="30sp" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="140dp"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:overScrollMode="never"
        android:paddingTop="105dp"
        android:id="@+id/recycler_live"
        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="32dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_wifi"
            android:tint="@color/empty_layout_color"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_alert"
            android:layout_below="@id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Live Matches"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/empty_layout_color"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_message"
            android:layout_below="@id/tv_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="There may be no live matches or there is a problem with your internet connection."
            android:gravity="center"
            android:textColor="@color/empty_layout_color"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>

    </RelativeLayout>

</RelativeLayout>