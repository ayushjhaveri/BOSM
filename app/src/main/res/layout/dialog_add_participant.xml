<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_shadow">

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Add Team Participant"
        android:textSize="30dp"
        android:textColor="@color/shade3"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_title"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_shadow"
                android:hint="NAME"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="15dp"
                android:drawableLeft="@drawable/icon_personadd"
                android:drawablePadding="5dp"
                android:drawableTint="@android:color/white"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:layout_marginTop="@dimen/dimen_reg_vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_shadow"
                android:hint="PHONE NUMBER"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="5dp"
                android:drawableTint="@android:color/white"
                android:inputType="phone"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:layout_marginTop="@dimen/dimen_reg_vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_shadow"
                android:hint="E-MAIL"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="15dp"
                android:drawableLeft="@drawable/icon_email"
                android:drawablePadding="5dp"
                android:drawableTint="@android:color/white"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENDER"
            android:textSize="12dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="37dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/dimen_reg_vertical"/>
        <Spinner

            android:id="@+id/spinner_gender2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:dropDownWidth="match_parent"
            android:popupBackground="@drawable/border_shadow_menu"
            android:dropDownSelector="@android:color/white"
            />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            >
            <Button android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  CANCEL  "
                android:textColor="@color/shade3"
                android:textSize="15dp"
                android:textAlignment="center"
                android:background="@color/back_shade3"
                android:layout_alignParentLeft="true"/>
            <Button android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  SUBMIT  "
                android:textColor="@color/shade3"
                android:textSize="15dp"
                android:textAlignment="center"
                android:background="@color/back_shade3"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>





    </LinearLayout>

</RelativeLayout>