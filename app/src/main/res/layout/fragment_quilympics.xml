<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">


    <ImageView
        android:tint="#3f395e"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg1"/>

    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:id="@+id/card_events"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_stall"
        android:layout_marginLeft="36dp"
        android:layout_alignTop="@+id/rl_stall"
        android:alpha=".80"
        app:cardElevation="6dp"
        android:layout_marginRight="36dp"
        android:layout_toRightOf="@+id/rl_stall"
        app:cardBackgroundColor="@color/background2"
        app:cardCornerRadius="20.5dp">

        <android.support.v7.widget.CardView
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="Round 1 : Predict the Popular"
                    android:textColor="@color/background2"
                    android:textSize="20sp" />
                <!--<View-->
                    <!--android:layout_marginEnd="12dp"-->
                    <!--android:layout_marginStart="12dp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="@drawable/line_gradient"-->
                    <!--android:layout_below="@+id/tv_round"-->
                    <!--/>-->
                <!--<TextView-->
                    <!--android:layout_marginBottom="4dp"-->
                    <!--android:layout_marginTop="2dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginStart="4dp"-->
                    <!--android:layout_below="@+id/tv_round"-->
                    <!--android:id="@+id/tv_desc"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:gravity="center"-->
                    <!--android:paddingBottom="4dp"-->
                    <!--android:paddingTop="4dp"-->
                    <!--android:text="Predict the popular"-->
                    <!--android:textColor="@color/background2"-->
                    <!--android:textSize="21sp" />-->

            </RelativeLayout>


        </android.support.v7.widget.CardView>




    </android.support.v7.widget.CardView>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/otp_container"
        android:layout_centerInParent="true"
        android:background="@drawable/border_shadow"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_timer_round"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round will start in 5s"
            android:textStyle="bold"
            android:textSize="17sp"
            />
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_gradient2"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_result"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP SUBMITTED SUCCESSFULLY!"
            />

        <EditText
            android:visibility="visible"
            android:id="@+id/et_otp"
            android:maxLength="4"
            android:maxLines="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:gravity="center"
            android:hint="OTP"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:textSize="40sp"
            />

        <Button
            android:visibility="visible"
            android:id="@+id/bt_submit"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="SUBMIT"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/elimination_conatiner"
        android:layout_centerInParent="true"
        android:background="@drawable/border_shadow"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/background2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIMINATED!"
            android:textStyle="bold"
            android:textSize="25sp"
            />
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_gradient2"/>
    </LinearLayout>

    <ScrollView
        android:visibility="gone"
        android:clipToPadding="false"
        android:paddingTop="25dp"
        android:id="@+id/que_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:background="@drawable/border_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_toLeftOf="@+id/tv_question_header"
                            android:layout_marginEnd="14dp"
                            android:visibility="visible"
                            android:id="@+id/timer_view"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="@color/background2"
                            app:cardCornerRadius="25dp">

                            <TextView
                                android:id="@+id/tv_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:gravity="center_horizontal|center_vertical"
                                android:textColor="@color/back_shade4"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:text="0" />
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:visibility="visible"
                            android:id="@+id/tv_question_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textStyle="bold"
                            android:text="QUESTION 1/5"
                            android:textColor="@color/back_shade6" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <!--<TextView-->
                            <!--android:visibility="gone"-->
                            <!--android:id="@+id/tv_question_header"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:background="@color/back_shade2"-->
                            <!--android:gravity="center"-->
                            <!--android:textSize="15dp"-->
                            <!--android:paddingTop="12dp"-->
                            <!--android:paddingBottom="12dp"-->
                            <!--android:textStyle="bold"-->
                            <!--android:text="QUESTION 1/5"-->
                            <!--android:textColor="@color/back_shade4" />-->

                        <TextView 
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:id="@+id/tv_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/back_shade2"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="@color/back_shade4"
                            android:textStyle="bold"
                            android:text="which player has the hfdfdsfsdfsdfdfdsfsdffdsfdsffsdfdsfsdfdsfdsfsdfsdfsdfdsfighest number of tickets so far?"
                            android:textSize="14dp" />

                    </LinearLayout>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/back_shade4"
                        android:clickable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/tv_a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="@color/background2"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:text="abcd"/>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/back_shade4"
                        android:clickable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <TextView 
                            android:id="@+id/tv_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="@color/background2"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:text="abcd"/>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/back_shade4"
                        android:clickable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/tv_c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="@color/background2"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:text="abcd"/>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/back_shade4"
                        android:clickable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="4dp">

                        <TextView 
                            android:id="@+id/tv_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="@color/background2"
                            android:padding="10dp"
                            android:text="abcd"
                            android:textSize="20dp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>
        </RelativeLayout>
    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/top_gradient"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:rotation="180"
        android:background="@drawable/top_gradient"/>


</RelativeLayout>