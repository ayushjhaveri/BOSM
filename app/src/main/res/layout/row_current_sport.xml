<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp">

<RelativeLayout
    android:layout_marginTop="18dp"
    android:visibility="visible"
    android:id="@+id/rl_top"
    android:layout_width="wrap_content"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/tv_sort_title"
        android:layout_marginTop="8dp"
        android:layout_marginStart="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 1"
        android:textSize="27sp"/>
    <android.support.v7.widget.CardView
        android:layout_above="@+id/vertical_view1"
        android:id="@+id/card_view"
        android:layout_width="6dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#E64A19"
        android:layout_height="6dp"
        android:layout_marginStart="46.5dp"/>
    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/vertical_view1"
        android:layout_marginStart="49dp"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#BDBDBD"
        />
</RelativeLayout>
<View
    android:layout_below="@id/rl_top"
    android:id="@+id/vertical_view2"
    android:layout_marginStart="49dp"
    android:layout_width="1dp"
    android:layout_height="32dp"
    android:background="#BDBDBD"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/vertical_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        >



        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_shade4"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/tv_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/back_shade4"
                android:drawableLeft="@drawable/icon_sportreg_black"
                android:drawablePadding="4dp"
                android:drawableTint="@android:color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="FOOTBALL"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/back_shade4"
                android:drawableLeft="@drawable/bullet"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Round 1"
                android:textColor="#E64A19"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:background="#BDBDBD">

            <TextView
                android:id="@+id/tv_college_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="36dp"
                android:paddingVertical="8dp"
                android:text="BITS"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="-"
                android:textColor="#000000"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_score_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="-"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_college_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:paddingHorizontal="36dp"
                android:paddingVertical="8dp"
                android:text="TITS"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_content"
            android:background="#BDBDBD">


            <!--<View-->
            <!--android:background="@color/back_shade2"-->
            <!--android:layout_marginHorizontal="15dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--/>-->

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp"
                android:text="DAY 2 : 19:00 hrs"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_date_time"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:padding="4dp"
                android:text="GYM G"
                android:textColor="#000000"
                android:textSize="9sp" />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>
