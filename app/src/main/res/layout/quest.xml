<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginStart="51dp"
    android:elevation="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:background="@drawable/border_shadow"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/background2"
            app:cardCornerRadius="40dp">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/back_shade4"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:text="20" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/tv_question_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back_shade2"
                android:gravity="center"
                android:textColor="#ffb146"
                android:textSize="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textStyle="bold"
                tools:text="QUESTION 1/5"
                tools:textColor="@color/back_shade4"
                tools:textSize="20dp"
                tools:textStyle="bold" />

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back_shade6"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="10dp"
                android:textColor="@color/back_shade4"
                android:text="which player has the hfdfdsfsdfsdfdfdsfsdffdsfdsffsdfdsfsdfdsfdsfsdfsdfsdfdsfighest number of tickets so far?"
                tools:textSize="17dp" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/tv_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/background2"
                android:padding="5dp"
                android:textSize="27dp"
                tools:text="abcd"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/tv_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/background2"
                android:padding="5dp"
                android:textSize="27dp"
                tools:text="abcd"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/tv_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/background2"
                android:padding="5dp"
                android:textSize="27dp"
                tools:text="abcd"/>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/tv_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/background2"
                android:padding="5dp"
                tools:text="abcd"
                tools:textSize="27dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v7.widget.CardView>








