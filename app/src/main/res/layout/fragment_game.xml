<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <!--<com.github.chrisbanes.photoview.PhotoView-->
        <!--android:id="@+id/photo_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginHorizontal="40dp"-->
        <!--android:layout_marginVertical="100dp"/>-->


    <ImageView
        android:tint="#3f395e"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg1"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_events"
        android:layout_marginTop="@dimen/header_top_margin"
        android:layout_marginBottom="@dimen/heading_bottom"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_stall"
        android:layout_marginStart="64dp"
        android:layout_alignTop="@+id/rl_stall"
        android:alpha=".90"
        app:cardElevation="6dp"
        android:layout_marginEnd="64dp"
        android:layout_toEndOf="@+id/rl_stall"
        app:cardBackgroundColor="@color/background2"
        app:cardCornerRadius="20.5dp">

        <android.support.v7.widget.CardView
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/back_shade4"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="Gaming Section"
                android:textColor="@color/background2"
                android:textSize="30sp" />

        </android.support.v7.widget.CardView>




    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_below="@id/card_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/border_shadow"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:id="@+id/rl_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/card_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            >

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </android.support.v7.widget.CardView>


        <TextView
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/tv_logout"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_name"
            android:layout_toEndOf="@id/card_profile"
            android:layout_marginTop="4dp"
            android:textColor="@color/back_shade6"
            android:padding="2dp"
            android:text="Ayush Jhaveri"
            android:maxLength="35"
            android:maxLines="1"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="12dp"
            android:id="@+id/tv_email"
            android:maxLength="40"
            android:maxLines="1"
            android:padding="0dp"
            android:layout_toEndOf="@id/card_profile"
            android:layout_below="@id/tv_name"
            android:textColor="@color/back_shade2"
            android:text="f20170215@pilani.bits-pilani.ac.in"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <!--<View-->
                <!--android:layout_marginTop="12dp"-->
                <!--android:layout_below="@id/tv_email"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@drawable/line_gradient"/>-->

        <TextView
            android:background="@drawable/border_shadow_menu"
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textSize="11sp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/border_shadow"
        android:id="@+id/rl_please_login"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.gms.common.SignInButton
            android:id="@+id/iv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/iv_login"
            android:id="@+id/tv_login"
           android:layout_alignTop="@+id/iv_login"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/iv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Please sign in\n   to participate"
            android:textSize="9sp"
            android:textColor="@color/back_shade2"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    </RelativeLayout>

  <LinearLayout
      android:layout_marginBottom="80dp"
      android:layout_marginTop="12dp"
      android:layout_below="@id/rl_login"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.support.v7.widget.CardView
          android:id="@+id/cv_roulette"
          app:cardElevation="0dp"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="12dp"
          android:layout_marginBottom="6dp"
          android:layout_weight="1"
          app:cardBackgroundColor="@android:color/transparent"
          android:layout_width="match_parent"
          android:layout_height="0dp">


          <TextView
              android:background="@drawable/border_shadow"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Roulette"
              android:gravity="center"
              android:textSize="35dp"
              />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/cv_quilympics"
          android:layout_marginTop="6dp"
          android:layout_marginStart="12dp"
          app:cardElevation="0dp"
          app:cardBackgroundColor="@android:color/transparent"
          android:layout_marginEnd="12dp"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="0dp">
          <TextView
              android:background="@drawable/border_shadow"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Quilympics"
              android:textSize="35dp"
              android:gravity="center"
              />


      </android.support.v7.widget.CardView>


  </LinearLayout>
