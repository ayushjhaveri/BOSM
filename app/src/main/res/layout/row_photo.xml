    <View
        android:layout_below="@id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_gradient"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

</RelativeLayout>