<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg1"
        android:tint="#3f395e" />

    <android.support.v7.widget.CardView
        android:id="@+id/rl_stall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:alpha=".95"
        app:cardElevation="6dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/back_shade4"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/icon_stall"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="10dp"
            android:src="@drawable/icon_stall"
            android:tint="#ffffff" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_stall"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@+id/rl_stall"
        android:alpha=".95"
        app:cardElevation="6dp"
        android:layout_marginRight="64dp"
        android:layout_toRightOf="@+id/rl_stall"
        app:cardBackgroundColor="@color/back_shade4"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:text="Registration"
            android:textColor="@color/background2"
            android:textSize="30sp" />


    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_stall"
        android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/white">
            <EditText
                android:id="@+id/edittext_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_shadow"
                android:hint="NAME"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="15dp"
                android:drawableLeft="@drawable/icon_name"
                android:drawablePadding="5dp"
                android:drawableTint="@android:color/white"
                android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical">
                <EditText
                    android:id="@+id/edittext_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_shadow"
                    android:hint="E-MAIL"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/icon_email"
                    android:drawablePadding="5dp"
                    android:drawableTint="@android:color/white"
                    android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical">
                <EditText
                    android:id="@+id/edittext_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_shadow"
                    android:hint="USERNAME"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/icon_username"
                    android:drawablePadding="5dp"
                    android:drawableTint="@android:color/white"
                    android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical">
                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_shadow"
                    android:hint="PASSWORD"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:drawableLeft="@drawable/icon_password"
                    android:drawablePadding="5dp"
                    android:drawableTint="@android:color/white"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER AS"
                android:textSize="12dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="37dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical"/>
            >
            <Spinner
                    android:id="@+id/spinner_registerAs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="@drawable/border_shadow_menu"
                    android:dropDownSelector="@android:color/white"
                    android:layout_marginTop="@dimen/dimen_reg_vertical"
                    />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical">
                <EditText
                    android:id="@+id/edittext_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_shadow"
                    android:hint="PHONE NUMBER"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:drawableLeft="@drawable/icon_phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="@android:color/white"
                    android:inputType="phone"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLLEGE"
                android:textSize="12dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="37dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical"/>
            <Spinner

                android:id="@+id/spinner_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:dropDownWidth="match_parent"
                android:popupBackground="@drawable/border_shadow_menu"
                android:dropDownSelector="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPORT/S"
                android:textSize="12dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="37dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_shadow"
                android:layout_marginTop="@dimen/dimen_reg_vertical">

                <TextView
                    android:id="@+id/text_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/border_shadow"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/icon_sportreg"
                    android:drawablePadding="5dp"
                    android:gravity="left"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Button android:id="@+id/button_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  SELECT  "
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:background="@drawable/sportbutton_border"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_toRightOf="@id/text_sport"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER"
                android:textSize="12dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="37dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dimen_reg_vertical"/>
            <Spinner

                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:dropDownWidth="match_parent"
                android:popupBackground="@drawable/border_shadow_menu"
                android:dropDownSelector="@android:color/white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ib_login"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="64dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circular_imageview3"
                android:elevation="8dp"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_login"
                android:tint="@color/back_shade6"
                />
            </RelativeLayout>




        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>