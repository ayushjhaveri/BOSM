<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:id="@+id/one">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_shadow"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/basketball"/>

            <ImageView
                android:id="@+id/star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:tint="#eeeeee"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/star_100"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivLogo"
                android:text="Badminton"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toRightOf="@id/ivLogo"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/star"
                android:layout_below="@+id/tvName"
                android:layout_marginRight="10dp"
                android:background="@drawable/line_gradient"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_toRightOf="@id/ivLogo"
                android:paddingTop="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="Men's Doubles" />

            <RelativeLayout
                android:id="@+id/rrDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/ivLogo">

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri 19 19:45"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvDateTime"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="00dp"
                    android:text="Pending"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rrDate"
                android:layout_toRightOf="@id/ivLogo"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvTeamA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/center"
                    android:layout_toStartOf="@+id/center"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="college 1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="vs"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:id="@+id/tvTeamB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/center"
                    android:layout_toEndOf="@+id/center"
                    android:gravity="right"
                    android:text="college 1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>