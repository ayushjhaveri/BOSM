<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

   <!-- <include
        layout="@layout/app_bar_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
        android:id="@+id/textRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Registration"
        android:padding="8dp"
        android:textSize="35sp"
        android:textStyle="bold"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/cardName"
        android:layout_below="@id/textRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        card_view:contentPadding="8dp"
        app:cardUseCompatPadding="true">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/textRegistration"
        android:textSize="20sp"
        android:padding="8dp"
        android:paddingTop="8dp"
        android:inputType="text"
        android:hint="Participant Name"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_camera"
        android:drawablePadding="8dp"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardName"
        card_view:cardCornerRadius="30dp"
        card_view:contentPadding="8dp"
        app:cardUseCompatPadding="true">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/editEmail"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/editName"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:hint="Participant E-mail"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_gallery"
        android:drawablePadding="8dp"
        android:paddingTop="8dp"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardEmail"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="8dp"
        app:cardUseCompatPadding="true">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editPhone"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/editEmail"
        android:padding="8dp"
        android:inputType="phone"
        android:hint="Participant Phone Number"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_slideshow"
        android:drawablePadding="8dp"
        android:paddingTop="8dp"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:id="@+id/cardSport"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/cardPhone"
       card_view:cardCornerRadius="10dp"
       card_view:contentPadding="8dp"
       app:cardUseCompatPadding="true"
       >
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
    <TextView
        android:id="@+id/sportText"
        android:hint="No Sport Selected"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:layout_toRightOf="@+id/sportButton"/>

    <Button
        android:id="@+id/sportButton"
        android:textSize="15sp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="Select Sport"
        android:paddingTop="8dp" />
       </RelativeLayout>
   </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardCoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardSport"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="8dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textCoach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach (optional)"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:drawablePadding="8dp"
            android:textSize="20sp"
           android:layout_centerHorizontal="true"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_editCoachName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCoach">
    <EditText
        android:id="@+id/editCoachName"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/sportButton"
        android:padding="8dp"
        android:inputType="text"
        android:hint="Name"
        android:background="@android:color/transparent"

        android:paddingTop="8dp"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_below="@+id/text_editCoachName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <RadioGroup
        android:id="@+id/radioGrp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >

        <RadioButton
            android:id="@+id/radioM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Male"
            />
        <RadioButton
            android:id="@+id/radioF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Female"
            />
    </RadioGroup>
        </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="Submit"
        android:layout_below="@id/cardCoach"
        android:textSize="20sp"

        />
</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_registration"
        app:menu="@menu/activity_registration_drawer" />


</android.support.v4.widget.DrawerLayout>
